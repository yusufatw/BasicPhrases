<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <Button
            android:id="@+id/hello"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonTapped"
            android:text="HELLO"
            app:layout_column="0"
            app:layout_columnWeight="2"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="2" />
        <Button
            android:id="@+id/howareyou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonTapped"
            android:text="HOW ArE YOU?"
            app:layout_column="1"
            app:layout_row="0"
            app:layout_columnWeight="2"
            app:layout_rowWeight="2"
            app:layout_gravity="fill"/>
        <Button
            android:id="@+id/goodevening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonTapped"
            android:text="GOOD EVENING"
            app:layout_column="0"
            app:layout_row="1"
            app:layout_columnWeight="2"
            app:layout_rowWeight="2"
            app:layout_gravity="fill"/>
        <Button
            android:id="@+id/please"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonTapped"
            android:text="PLEASE"
            app:layout_column="1"
            app:layout_row="1"
            app:layout_columnWeight="2"
            app:layout_rowWeight="2"
            app:layout_gravity="fill"/>
        <Button
            android:id="@+id/mynameis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonTapped"
            android:text="MY NAME IS ..."
            app:layout_column="0"
            app:layout_row="2"
            app:layout_columnWeight="2"
            app:layout_rowWeight="2"
            app:layout_gravity="fill"/>
        <Button
            android:id="@+id/doyouspeakenglish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonTapped"
            android:text="DO YOU &#10;SPEAK ENGLISH?"
            app:layout_column="1"
            app:layout_row="2"
            app:layout_columnWeight="2"
            app:layout_rowWeight="2"
            app:layout_gravity="fill"/>
        <Button
            android:id="@+id/welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonTapped"
            android:text="WELCOME"
            app:layout_column="0"
            app:layout_row="3"
            app:layout_columnWeight="2"
            app:layout_rowWeight="2"
            app:layout_gravity="fill"/>
        <Button
            android:id="@+id/ilivein"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="buttonTapped"
            android:text="I LIVE IN ..."
            app:layout_column="1"
            app:layout_row="3"
            app:layout_columnWeight="2"
            app:layout_rowWeight="2"
            app:layout_gravity="fill"/>
    </android.support.v7.widget.GridLayout>
</android.support.constraint.ConstraintLayout>